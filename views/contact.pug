extends base.pug
block scripts
  script(src='/static/index.js')

block style 
     style
      include ../static/style.css
     style
      include ../static/contact.css

block content
    div.container
        h1 contact us
        form(action="/contact",method="post",class="form") 
            input(type="text",class="input",name="name",placeholder="Enter your name")
            input(type="email",class="input",name="email",placeholder="Enter your email")
            input(type="text",class="input",name="phone ",placeholder="Enter your phone number")
            input(type="text",class="input",name="place",placeholder="Enter your place")
            input(type="text",class="input",name="decs",placeholder="Enter your connection")
            button(class="input",id="btn")
                | submit
               
            
         
    
         
   
     
                   
    
    
                